@model TaskManagementSystem.Models.TaskItem

<h2>Edit Task</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Title"></label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Description"></label><br />
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Status"></label><br />
        <select asp-for="Status">
            <option value="">-- Select Status --</option>
            <option>To Do</option>
            <option>In Progress</option>
            <option>Completed</option>
        </select>
        <span asp-validation-for="Status" style="color:red"></span>
    </div>

    <div>
        <label asp-for="DueDate"></label><br />
        <input asp-for="DueDate" type="date" />
    </div>

    <br />
    <button type="submit">Update Task</button>
    <a asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
